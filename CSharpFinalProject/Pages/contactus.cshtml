@page
@model CSharpFinalProject.Pages.contactusModel
@{
    ViewData["Title"] = "contactus";
}

<div class="container-fluid" id="contactus">
   
    <div class="row contact">
        <div class="col-md-6">
            <div class="wrapper">
                <div class="content">
                    <h1>CONTACT US</h1>
                </div>
                <div class="form">
                    <form method="post">
                        <div class="top-form">
                            <div class="inner-form">
                                <div class="label">name</div>
                                <input type="text" asp-for="user.name" placeholder="henok">
                            </div>
                            <div class="inner-form">
                                <div class="label">email</div>
                                <input type="text" asp-for="user.email" placeholder="Example@gmail.com">
                            </div>
                            <div class="inner-form">
                                <div class="label">phone</div>
                                <input type="text" asp-for="user.phone" placeholder="1234567890">
                            </div>
                        </div>

                        <div class="bottom-form">
                            <div class="inner-form">
                                <div class="label">Case</div>
                                <select name="" id="select-case" asp-for="user.caseSubject">
                                    <option value="case">select your case</option>
                                    <option value="Buisness">Business Case</option>
                                    <option value="Criminal">Criminal Case</option>
                                    <option value="Immigration">Immigration Case</option>
                                    <option value="Family">Family Case</option>
                                    <option value="Labour & Employment">Labour & Employment Case</option>
                                    <option value="Civil Litigation">Civil Litigation Case</option>
                                </select>
                            </div>
                        </div>
                        <div class="middle-form">
                            <div class="inner-form">
                                <div class="label">message</div>
                                <textarea type="text" style="width: 100%; height: 100px" asp-for="user.message" placeholder="subject">Message here .....</textarea>
                            </div>
                        </div>

                        <p><input type="submit" class="btn btn-primary btn-block" value="SUBMIT REQUEST" /></p>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 ">
            <div class="maps">
                <iframe width="100%" height="550px" id="gmap_canvas" src="https://maps.google.com/maps?q=trios%20college%20toronto%20&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            </div>
        </div>
    </div>
    </div>
