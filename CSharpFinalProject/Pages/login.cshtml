@page
@model CSharpFinalProject.Pages.loginModel
@{
    Layout = "_UserLayout";
    ViewData["Title"] = "login";
}


<div class="container-fluid" id="signup-form">
    <div class="sign-up-form">
        <div class="form1">
            <form method="post" id="form1">

                <h4 class="bg-success">@Model.outMessage</h4>
                <h4 class="bg-warning">@Model.loginError</h4>
                <h1>Sign In</h1>
                <input type="email" class="input-box" asp-for="user.email" placeholder="Email" required>
                <input type="password" class="input-box" asp-for="user.password" placeholder="Password" required>
                <p><span><input type="checkbox" required></span> agree to the terms of services</p>
                <p><input type="submit" class="login-btn" value="Log In"></p>
                <hr>
                <p class="or">Not a member yet? please <a href="/signup" id="signup">Sign Up</a></p>
            </form>
        </div>
    </div>
</div>